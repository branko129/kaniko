podTemplate(yaml: '''
    apiVersion: v1
    kind: Pod
    spec:
      containers:
      - name: gradle
        image: gradle:7.3.0-jdk17
        command:
        - sleep
        args:
        - 99d
        resourceLimitCpu:
        - '500m'
        resourceLimitMemory:
        - '2048Mi'
      - name: kaniko
        image: gcr.io/kaniko-project/executor:debug
        resourceLimitCpu:
        - '100m'
        resourceLimitMemory:
        - '200Mi'
        args: ["--dockerfile=/`pwd`/Dockerfile",
                "--context=dir://`pwd`",
                "--destination=neos1-docker-dev.artifactory.nortal.com/faq-service:kaniko"]
        volumeMounts:
          - name: kaniko-secret
            mountPath: /kaniko/.docker
      restartPolicy: Never
      volumes:
      - name: kaniko-secret
        secret:
          secretName: regcred
          items:
            - key: .dockerconfigjson
              path: config.json
''')
  {
    node(POD_LABEL) {
        stage('Get a Java project from git') {
            sh"git config --global http.sslverify false"
            sh"export GIT_SSL_NO_VERIFY=true"
            git branch: 'master', credentialsId: 'faq-pat', url: 'https://gitlab.nortal.com/neos1/faq-service.git'
            container('gradle') {
                stage('Build') {
                    sh 'echo hello'
                }
            }
        }
         stage('Build docker image') {
                container('kaniko') {
                    sh "echo `pwd`"
                    sh "/kaniko/executor \
                      --dockerfile `pwd`/Dockerfile \
                      --context `pwd` \
                      --insecure \
                      --skip-tls-verify \
                      --destination=neos1-docker-dev.artifactory.nortal.com/faq-service:kaniko"
                    }
            }
    }
  }
